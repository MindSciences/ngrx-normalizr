{
	"compileOnSave": false,
	"files": ["./src/index.ts"],
	"exclude": ["dist", "node_modules", "**/*/node_modules"],
	"compilerOptions": {
		"outDir": "./dist",
		"sourceMap": false,
		"declaration": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"typeRoots": ["node_modules/@types"],
		"lib": ["es2016", "dom", "es2017.object"],
		"moduleResolution": "node"
	},
	"angularCompilerOptions": {
		"genDir": "dist"
	}
}
